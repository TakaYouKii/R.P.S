<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/txt_second_activity"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Activity"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        />
    <Button
        android:id="@+id/btn_whats_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whats App"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        app:layout_constraintTop_toBottomOf="@id/txt_second_activity"
        app:layout_constraintEnd_toEndOf="@id/txt_second_activity"
        app:layout_constraintStart_toStartOf="@id/txt_second_activity"
        android:layout_marginTop="25dp"/>
    <Button
        android:id="@+id/btn_telegram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telegram"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        app:layout_constraintTop_toBottomOf="@id/btn_whats_app"
        app:layout_constraintEnd_toEndOf="@id/txt_second_activity"
        app:layout_constraintStart_toStartOf="@id/txt_second_activity"
        android:layout_marginTop="25dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>